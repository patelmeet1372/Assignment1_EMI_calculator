<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#704CAF50"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:text="EMI Calculator"
        android:textColor="#3B9940"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!-- Mortgage Amount Input -->
    <TextView
        android:id="@+id/tvMortgageAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="9.5dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:text="Mortgage Amount"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Tenure Input -->
    <EditText
        android:id="@+id/etMortgageAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Enter mortgage amount"
        android:inputType="number"
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:textColorHint="#5D5C5C" />

    <TextView
        android:id="@+id/tvTenure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="9.5dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:text="Tenure (in years)"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etTenure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Enter tenure in years"
        android:inputType="number"
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:textColorHint="#5D5C5C" />

    <!-- Interest Rate Input -->
    <TextView
        android:id="@+id/tvInterestRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="9.5dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:text="Interest Rate (Annual)"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etInterestRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Enter interest rate"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:textColorHint="#5D5C5C" />

    <!-- Button to Calculate EMI -->
    <Button
        android:id="@+id/btnCalculateEMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:text="Calculate EMI"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <!-- Display EMI Result -->
    <TextView
        android:id="@+id/tvEMIResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_background"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Your monthly EMI will be displayed here"
        android:textColor="#040404"
        android:textSize="19.5sp" />
</LinearLayout>
